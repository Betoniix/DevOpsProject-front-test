pipeline {
    agent any
    stages {
        stage('SSH to VM') {
            steps {
                sshagent(['ssh-agent']) { // Define tus credenciales SSH en Jenkins
                    sh """
                    ssh -o StrictHostKeyChecking=no cisco@192.168.100.42 << 'EOF'
                    npm install @angular/cli --save-dev
                    npm install
                    ng serve
                    EOF
                    """
                }
            }
        }
    }
}
