pipeline {
    agent any
    stages {
        stage('Deploy to VM') {
            steps {
                sshagent(['credenciales-ssh']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no cisco@192.168.100.42 << 'EOF'
                        cd Desktop/
                        git clone https://github.com/CL-Nayib/DevOpsProject-front.git .
                        cd DevOpsProject-front || exit 1
                        git switch develop
                        npm install -g @angular/cli
                        npm install
                        ng serve 
                    EOF
                    """
                }
            }
        }
    }
}
