pipeline {
    agent any

    environment {
        REMOTE_HOST = 'cisco@192.168.100.42'  // Reemplaza con la IP o hostname de tu VM
    }

    stages {
        stage('SSH Commands') {
            steps {
                script {
                    sshagent(['credenciales-ssh']) {
                        sh """
                        ssh -tt -o StrictHostKeyChecking=no ${env.REMOTE_HOST} << EOF
                        echo "ConexiÃ³n SSH exitosa"
                        cd Desktop/
                        git clone https://github.com/CL-Nayib/DevOpsProject-front.git
                        cd DevOpsProject-front || exit 1
                        git switch develop
                        npm install -g @angular/cli
                        npm install
                        ng serve
                        EOF
                        """
                    }
                }
            }
        }
    }
}
